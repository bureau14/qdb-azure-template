{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "ipAddress": {
      "type": "string"
    },
    "qdbPort": {
      "type": "int",
      "defaultValue": 2836
    },
    "httpPort": {
      "type": "int",
      "defaultValue": 8080
    },
    "peerAddress": {
      "type": "string"
    },
    "subnetName": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "baseUrl": {
      "type": "string"
    },
    "networkName": {
      "type": "string"
    },
    "vmPassword": {
      "type": "string"
    },
    "vmLinuxConfig": {
      "type": "object"
    },
    "vmSize": {
      "type": "string"
    },
    "vmUser": {
      "type": "string"
    },
    "publicIpName": {
      "type": "string"
    },
    "computerName": {
      "type": "string"
    },
    "nsgName": {
      "type": "string"
    }
  },
  "variables": {
    "filesToDownload": [
      "[concat(parameters('baseUrl'), '/quasardbTestbox.setup.sh')]",
      "[concat(parameters('baseUrl'), '/quasardbTestbox.motd.txt')]",
      "https://download.quasardb.net/quasardb/2.0/2.0.0rc6/web-bridge/qdb-web-bridge_2.0.0-1.deb",
      "https://download.quasardb.net/quasardb/2.0/2.0.0rc6/utils/qdb-utils_2.0.0-1.deb",
      "https://download.quasardb.net/quasardb/2.0/2.0.0rc6/api/c/qdb-api_2.0.0-1.deb",
      "https://download.quasardb.net/quasardb/2.0/2.0.0rc6/api/python/qdb_python_api-2.0.0rc6-py2.7-linux-x86_64.egg",
      "https://download.quasardb.net/quasardb/2.0/2.0.0rc6/api/php/quasardb-2.0.0.tgz",
      "https://download.quasardb.net/quasardb/2.0/2.0.0rc6/bench/qdb-benchmark-2.0.0-Linux.tar.gz"
    ],
    "storageAccountContainerName": "vhd",
    "vmName": "[concat(parameters('computerName'),'-vm')]",
    "nicName": "[concat(parameters('computerName'),'-nic')]",
    "subnetRef": "[concat(resourceId('Microsoft.Network/virtualNetworks',parameters('networkName')),'/subnets/',parameters('subnetName'))]",
    "commandToExecute": "[concat('bash quasardbTestbox.setup.sh --address=',parameters('ipAddress'),':',parameters('httpPort'),' --node=',parameters('peerAddress'),':',parameters('qdbPort'))]"
  },
  "resources": [
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('nicName')]",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('ipAddress')]",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('publicIpName'))]"
              },
              "subnet": {
                "id": "[variables('subnetRef')]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
        }
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('vmName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('computerName')]",
          "adminUsername": "[parameters('vmUser')]",
          "adminPassword": "[parameters('vmPassword')]",
          "linuxConfiguration": "[parameters('vmLinuxConfig')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "Canonical",
            "offer": "UbuntuServer",
            "sku": "14.04.3-LTS",
            "version": "latest"
          },
          "osDisk": {
            "name": "osdisk",
            "vhd": {
              "uri": "[concat('http://', parameters('storageAccountName'), '.blob.core.windows.net/',variables('storageAccountContainerName'),'/',parameters('computerName'),'-os-disk.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('vmName'), '/setup')]",
      "apiVersion": "2016-03-30",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/',variables('vmName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.OSTCExtensions",
        "type": "CustomScriptForLinux",
        "typeHandlerVersion": "1.5",
        "autoUpgradeMinorVersion": "true",
        "settings": {
          "fileUris": "[variables('filesToDownload')]",
          "commandToExecute": "[variables('commandToExecute')]"
        }
      }
    }
  ]
}